{
  "manifest_version": 3,
  "name": "JLU Site Navigator",
  "version": "1.1.0",
  "description": "吉林大学校园网资源快速导航。点击扩展图标打开导航页。",

  "action": {
    "default_icon": {
      "16": "assets/icon1-16.png",
      "48": "assets/icon1-48.png",
      "128": "assets/icon1-128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },

  "permissions": ["storage", "tabs"],

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}